generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String        @id @default(uuid())
  name          String
  email         String        @unique
  phone         String        @unique
  password      String
  isVerified    Boolean       @default(false)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  transactions  Transaction[]
}

model Transaction {
  id                    String   @id @default(uuid())
  userId                String
  sourceWallet          String   // WAVE, ORANGE, FREE_MONEY
  destinationWallet     String   // WAVE, ORANGE, FREE_MONEY
  destinationPhone      String
  amount                Float
  status                String   // PENDING, SUCCESS, FAILED
  intouchTransactionId  String?  @unique
  errorMessage          String?
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  user                  User     @relation(fields: [userId], references: [id])
  
  @@index([userId])
  @@index([status])
  @@index([intouchTransactionId])
}

model OTP {
  id          String   @id @default(uuid())
  phone       String
  code        String
  expiresAt   DateTime
  verified    Boolean  @default(false)
  createdAt   DateTime @default(now())
  
  @@index([phone, code])
}
